{
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile"
    },
    "capAdd": ["SYS_PTRACE"],
    "containerEnv": {
        "CARGO_PROFILE_DEV_BUILD_OVERRIDE_DEBUG": "true"
    },
    "containerUser": "rexegy",
    "customizations": {
        "vscode": {
            "extensions": [
                "barbosshack.crates-io",
                "github.copilot",
                "ms-azuretools.vscode-docker",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.makefile-tools",
                "panicbit.cargo",
                "rust-lang.rust-analyzer",
                "tamasfe.even-better-toml"
            ],
            "settings": {
                "editor.rulers": [
                    80,
                    100
                ],
                "editor.formatOnSave": true,
                "editor.formatOnSaveMode": "modificationsIfAvailable",
                "[rust]": {
                    "editor.rulers": [
                        100
                    ]
                }
            }
        }
    },
    "mounts": [
        "source=/usr/local/exegy,target=/usr/local/exegy,type=bind,consistency=cached",
        "source=${localEnv:HOME}/.config,target=/home/rexegy/.config,type=bind,consistency=cached",
        "source=${localEnv:HOME}/dotfiles,target=/home/rexegy/dotfiles,type=bind,consistency=cached"
    ],
    "name": "rexegy",
    "privileged": true,
    "remoteUser": "rexegy",
    "runArgs": [
        "--userns=keep-id"
    ],
    "securityOpt": [ "seccomp=unconfined" ],
    "updateRemoteUserUID": true,
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/rexegy,type=bind,consistency=cached"
}